<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="abstractManager" abstract="true">
        <property name="daoFactory" ref="daoFactory"/>
    </bean>

    <bean id="commentaireManager" class="org.escalade.business.impl.manager.CommentaireManagerImplImpl" parent="abstractManager"/>
    <bean id="compteManager" class="org.escalade.business.impl.manager.CompteManagerImplImpl" parent="abstractManager"/>
    <bean id="longueurManager" class="org.escalade.business.impl.manager.LongueurManagerImplImpl" parent="abstractManager"/>
    <bean id="relaiManager" class="org.escalade.business.impl.manager.RelaiManagerImplImpl" parent="abstractManager"/>
    <bean id="resaTopoManager" class="org.escalade.business.impl.manager.ResaTopoManagerImplImpl" parent="abstractManager"/>
    <bean id="secteurManager" class="org.escalade.business.impl.manager.SecteurManagerImplImpl" parent="abstractManager"/>
    <bean id="siteManager" class="org.escalade.business.impl.manager.SiteManagerImplImpl" parent="abstractManager"/>
    <bean id="topoManager" class="org.escalade.business.impl.manager.TopoManagerImplImpl" parent="abstractManager"/>
    <bean id="voieManager" class="org.escalade.business.impl.manager.VoieManagerImplImpl" parent="abstractManager"/>

    <bean id="managerFactory" class="org.escalade.business.impl.ManagerFactoryImpl">
        <property name="commentaireManager" ref="commentaireManager"/>
        <property name="compteManager" ref="compteManager"/>
        <property name="longueurManager" ref="longueurManager"/>
        <property name="relaiManager" ref="relaiManager"/>
        <property name="resaTopoManager" ref="resaTopoManager"/>
        <property name="secteurManager" ref="secteurManager"/>
        <property name="siteManager" ref="siteManager"/>
        <property name="topoManager" ref="topoManager"/>
        <property name="voieManager" ref="voieManager"/>
    </bean>

</beans>