<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ===== DÃ©claration des DAO ===== -->
    <bean id="commentaireDao" class="org.escalade.consumer.impl.dao.CommentaireDaoImpl"/>
    <bean id="compteDao" class="org.escalade.consumer.impl.dao.CompteDaoImpl"/>
    <bean id="longueurDao" class="org.escalade.consumer.impl.dao.LongueurDaoImpl"/>
    <bean id="resaTopoDao" class="org.escalade.consumer.impl.dao.ResaTopoDaoImpl"/>
    <bean id="secteurDao" class="org.escalade.consumer.impl.dao.SecteurDaoImpl"/>
    <bean id="siteDao" class="org.escalade.consumer.impl.dao.SiteDaoImpl"/>
    <bean id="topoDao" class="org.escalade.consumer.impl.dao.TopoDaoImpl"/>
    <bean id="voieDao" class="org.escalade.consumer.impl.dao.VoieDaoImpl"/>

    <!-- ===== DaoFactory ===== -->
    <bean id="daoFactory" class="org.escalade.consumer.impl.DaoFactoryImpl">
        <property name="commentaireDao" ref="commentaireDao"/>
        <property name="compteDao" ref="compteDao"/>
        <property name="longueurDao" ref="longueurDao"/>
        <property name="resaTopoDao" ref="resaTopoDao"/>
        <property name="secteurDao" ref="secteurDao"/>
        <property name="siteDao" ref="siteDao"/>
        <property name="topoDao" ref="topoDao"/>
        <property name="voieDao" ref="voieDao"/>
    </bean>

    <!-- ==== AbstractResource ===== -->
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetClass" value="org.escalade.consumer.impl.data.AbstractDaoDataImpl"/>
        <property name="targetMethod" value="getDataSource"/>
        <property name="arguments" ref="daoFactory"/>
    </bean>
    
</beans>