<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ===== DÃ©claration des DAO ===== -->
    <bean id="abstractDataImpl" abstract="true">
        <property name="dataSource" value="dataSourceEscalade"/>
    </bean>
    
    <bean id="commentaireDao" class="org.escalade.consumer.impl.dao.CommentaireImpl" parent="abstractDataImpl"/>
    <bean id="compteDao" class="org.escalade.consumer.impl.dao.CompteImpl" parent="abstractDataImpl"/>
    <bean id="longueurDao" class="org.escalade.consumer.impl.dao.LongueurImpl" parent="abstractDataImpl"/>
    <bean id="relaiDao" class="org.escalade.consumer.impl.dao.RelaiImpl" parent="abstractDataImpl"/>
    <bean id="resaTopoDao" class="org.escalade.consumer.impl.dao.ResaTopoImpl" parent="abstractDataImpl"/>
    <bean id="secteurDao" class="org.escalade.consumer.impl.dao.SecteurImpl" parent="abstractDataImpl"/>
    <bean id="siteDao" class="org.escalade.consumer.impl.dao.SiteImpl" parent="abstractDataImpl"/>
    <bean id="topoDao" class="org.escalade.consumer.impl.dao.TopoImpl" parent="abstractDataImpl"/>
    <bean id="voieDao" class="org.escalade.consumer.impl.dao.VoieImpl" parent="abstractDataImpl"/>

    <!-- ===== DaoFactory ===== -->
    <bean id="daoFactory" class="org.escalade.consumer.impl.DaoFactoryImpl">
        <property name="commentaireDao" ref="commentaireDao"/>
        <property name="compteDao" ref="compteDao"/>
        <property name="longueurDao" ref="longueurDao"/>
        <property name="relaiDao" ref="relaiDao"/>
        <property name="resaTopoDao" ref="resaTopoDao"/>
        <property name="secteurDao" ref="secteurDao"/>
        <property name="siteDao" ref="siteDao"/>
        <property name="topoDao" ref="topoDao"/>
        <property name="voieDao" ref="voieDao"/>
    </bean>

</beans>